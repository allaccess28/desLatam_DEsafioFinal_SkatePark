    <div class="py-4 bg-dark text-white mt-3 transparentSquare rounded">
      <h2>Registro</h2>
      <hr class="w-30" />

      <form action="/register/add" method="post" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto ">
          <div class="form-group col-12 col-sm-6 ">
            <label for="email">Email</label>
            <input class="form-control m-auto mb-3" type="email" name="email" id="email" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="nombre">Nombre</label>
            <input class="form-control m-auto mb-3" type="nombre" name="nombre" id="nombre"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="password">Password</label>
            <input class="form-control m-auto mb-3" type="password" name="password" id="password" placeholder="Ej. ********" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="confirm_password">Repita la password</label>
            <input class="form-control m-auto mb-3" type="password" name="confirm_password" id="confirm_password" placeholder="Ej. ********"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="anos_experiencia">Años de experiencia</label>
            <input class="form-control m-auto mb-3" type="text" name="anos_experiencia" id="anos_experiencia" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label for="especialidad">Especialidad</label>
            <input class="form-control m-auto mb-3" type="text" name="especialidad" id="especialidad" />
          </div>
          <div class="form-group col-12 col-sm-12 mb-3">
            <label for="image">Foto de perfil</label>
            <input type="file" id="image" name="image" />
          </div>
        </div>
        <button class="btn btn-outline-info mb-3" type="submit">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
      </form>
    </div>